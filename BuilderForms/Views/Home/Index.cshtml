@model IEnumerable<Product>


<h2>Product List</h2>

<table class="table table-sm table-bordered">

    <thead class="bg-primary text-white">
        <tr style="text-align:center">
            <th >Name</th>
            <th>Price</th>
            <th>is Approved</th>
            <th>Select</th>
        </tr>

    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr style="text-align:center">
            <td>@item.Name</td>
            <td>@item.Price</td>
            <td>
                @if (item.IsAppored)
                {
                    <span class="badge badge-pill badge-success">Onaylı</span>
                }
                else
                {
                    <span class="badge badge-pill badge-danger">Onaysız</span>
                }
            </td>
            <td><a class="btn btn-danger btn-sm " asp-controller="Home" asp-action="Edit" asp-route-id="@item.Id">Update
                </a></td>
        </tr>
        }
    </tbody>
</table>


<a class="btn btn-primary btn-block" asp-controller="Home" asp-action="Create">Create</a>